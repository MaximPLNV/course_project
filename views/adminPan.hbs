<!DOCTYPE html>
<html lang="{{lang}}">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{__ "adminPan"}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <link href="css/darkStyle.css" rel="stylesheet">
</head>
<body>
    {{> menu }}
    <div class="container bg-light rounded-3 pt-2 pb-2">
        <div class="row">
            <div class="col-12">
                <button class="darkmode-color btn btn-outline-success dropdown-toggle mb-2 shadow-none" type="button" id="admDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    {{__ "usersMngmnt"}}
                </button>
                <ul class="dropdown-menu" aria-labelledby="admDropdown">
                    <li>
                        <a class="dropdown-item" onclick="adminPan('block');">{{__ "block"}}</a>
                    </li>
                    <li>
                        <a class="dropdown-item" onclick="adminPan('unblock');">{{__ "unblock"}}</a>
                    </li>
                    <li>
                        <a class="dropdown-item" onclick="adminPan('delete');">{{__ "delete"}}</a>
                    </li>
                    <li>
                        <a class="dropdown-item" onclick="adminPan('adminup');">{{__ "ALvlUp"}}</a>
                    </li>
                    <li>
                        <a class="dropdown-item" onclick="adminPan('admindown');">{{__ "ALvlDown"}}</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-12 overflow-auto">
                <table class="table table-light table-striped text-center">
                    <thead>
                        <tr>
                            <th scope="col">
                                <div class="form-check">
                                    <input class="cursor-pointer form-check-input" type="checkbox" id="main_checkBox" onclick="main_checkBox();">
                                </div>
                            </th>
                            <th scope="col">{{__ "ID"}}</th>
                            <th scope="col">{{__ "nickname"}}</th>
                            <th scope="col">{{__ "email"}}</th>
                            <th scope="col">{{__ "status"}}</th>
                            <th scope="col">{{__ "adminLvl"}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                            <tr class="cursor-pointer">
                                <td>
                                    <div class="form-check">
                                        <input onclick="setMainCheckBox();" class="cursor-pointer one-checkbox form-check-input" type="checkbox" value="" id="{{this.id}}">
                                    </div>
                                </td>
                                <td onclick="window.location='/user?id={{this.id}}'">{{this.id}}</td>
                                <td onclick="window.location='/user?id={{this.id}}'">{{this.name}}</a></td>
                                <td onclick="window.location='/user?id={{this.id}}'">{{this.email}}</td>
                                <td onclick="window.location='/user?id={{this.id}}'">
                                    {{#if this.status}}
                                        {{__ "BLOCKED"}}
                                    {{else}}
                                        OK
                                    {{/if}}
                                </td>
                                <td class="cursor-pointer" onclick="window.location='/user?id={{this.id}}'">{{this.adminLvl}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="js/adminPanClient.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>