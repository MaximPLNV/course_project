<!DOCTYPE html>
<html lang="{{lang}}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{__ "home"}}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="css/styles.css" rel="stylesheet">
        <link href="css/darkStyle.css" rel="stylesheet">
    </head>
    <body>
        {{> menu}}
        <div class="container bg-light rounded-3 pt-2 pb-2">
            <div class="row">
                <div class="col-12 text-center">
                    <span class="fs-4">{{__ "topItems"}}</span>
                    <hr class="mb-0">
                </div>
            </div>
            <div class="row">
                {{#if items}}
                    <div class="col-12 overflow-auto">
                        <table class="table table-light table-striped text-center">
                            <thead>
                                <tr>
                                    <th scope="col">№</th>
                                    <th scope="col">{{__ "itemName"}}</th>
                                    <th scope="col">{{__ "collectionName"}}</th>
                                    <th scope="col">{{__ "itemTags"}}</th>
                                    <th scope="col">{{__ "date"}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each items}}
                                    <tr class="cursor-pointer">
                                        <td onclick="window.location='/item?id={{this.id}}'">{{sum @index 1}}</td>
                                        <td onclick="window.location='/item?id={{this.id}}'">{{this.item_name}}</td>
                                        <td onclick="window.location='/collection?id={{this.col_id}}'">{{this.col_name}}</td>
                                        <td onclick="window.location='/item?id={{this.id}}'">{{this.tags}}</td>
                                        <td onclick="window.location='/item?id={{this.id}}'">{{this.cr_date}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <div class="col-12 fs-5 text-center mt-5 mb-5">
                        {{__ "mainItemsNull"}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="container bg-light rounded-3 pt-2 pb-2 mt-5">
            <div class="row">
                <div class="col-12 text-center">
                    <span class="fs-4">{{__ "topCollections"}}</span>
                    <hr class="mb-0">
                </div>
            </div>
            <div class="row">
                {{#if collections}}
                    <div class="col-12 overflow-auto">
                        <table class="table table-light table-striped text-center">
                            <thead>
                                <tr>
                                    <th scope="col">№</th>
                                    <th scope="col">{{__ "collectionName"}}</th>
                                    <th scope="col">{{__ "theme"}}</th>
                                    <th scope="col">{{__ "count"}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each collections}}
                                    <tr class="cursor-pointer" onclick="window.location='/collection?id={{this.id}}'">
                                        <td>{{sum @index 1}}</td>
                                        <td>{{this.col_name}}</td>
                                        <td>{{theme this.theme}}</td>
                                        <td>{{this.count}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <div class="col-12 fs-5 text-center mt-5 mb-5">
                        {{__ "mainCollectionsNull"}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="container bg-light rounded-3 pt-2 pb-2 mt-5">
            <div class="row">
                <div class="col-12 text-center">
                    <span class="fs-4">{{__ "searchByTags"}}</span>
                    <hr class="mb-0">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="d-flex flex-wrap p-3">
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                        <span class="border ps-2 pe-2 rounded-pill m-1">bigestTegInTheWorld</span>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>